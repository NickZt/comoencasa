<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    android:backgroundTintMode="add"
    tools:context=".StartActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/linear_layout_border_shadow"
            android:orientation="vertical">

            <androidx.appcompat.widget.SearchView
                android:id="@+id/search_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:queryHint="Búsqueda"
                app:queryBackground="@android:color/transparent">
                <requestFocus />
            </androidx.appcompat.widget.SearchView>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:fontFamily="sans-serif-black"
                android:text="Por comida"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#373640"
                android:textSize="32sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGroupsMore"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:textAllCaps="false"
                android:text="Ver más"
                android:textColor="#707070"
                app:iconTint="#707070"
                app:iconTintMode="multiply"
                app:icon="@drawable/chevron_right"
                android:layoutDirection="rtl"/>

        </RelativeLayout>

        <LinearLayout
            style="@style/GrayTextColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="33"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgGroup1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/entradas_icon" />

                <TextView
                    android:id="@+id/txtGroupName1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Entradas"
                    android:textAlignment="center"
                    android:textColor="#707070"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtGroupCount1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="(12)"
                    android:textAlignment="center"
                    android:textColor="#707070"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="33"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgGroup2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/entradas_icon" />

                <TextView
                    android:id="@+id/txtGroupName2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Principal"
                    android:textAlignment="center"
                    android:textColor="#707070"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtGroupCount2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="(25)"
                    android:textAlignment="center"
                    android:textColor="#707070"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="33"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgGroup3"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/entradas_icon" />

                <TextView
                    android:id="@+id/txtGroupName3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Postres"
                    android:textAlignment="center"
                    android:textColor="#707070"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtGroupCount3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="(10)"
                    android:textAlignment="center"
                    android:textColor="#707070"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:fontFamily="sans-serif-black"
                android:text="Recetas"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#373640"
                android:textSize="32sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRecipesMore"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:textAllCaps="false"
                android:text="Ver más"
                android:textColor="#707070"
                app:iconTint="#707070"
                app:iconTintMode="multiply"
                app:icon="@drawable/chevron_right"
                android:layoutDirection="rtl"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="33"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <ImageView
                    android:id="@+id/imgRecipe1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/entradas_icon" />

                <TextView
                    android:id="@+id/txtRecipeName1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Filet de merluza a la romana"
                    android:textColor="#707070"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txtRecipeLength1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/schedule_icon"
                    android:text=" 60 min"
                    android:textColor="#707070"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/txtRecipeCalories1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/calorias_icon"
                    android:text=" 457 calorías"
                    android:textColor="#707070"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="33"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <ImageView
                    android:id="@+id/imgRecipe2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/entradas_icon" />

                <TextView
                    android:id="@+id/txtRecipeName2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Camarones"
                    android:textColor="#707070"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txtRecipeLength2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/schedule_icon"
                    android:text=" 90 min"
                    android:textColor="#707070"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/txtRecipeCalories2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/calorias_icon"
                    android:text=" 337 calorías"
                    android:textColor="#707070"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="33"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <ImageView
                    android:id="@+id/imgRecipe3"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/entradas_icon" />

                <TextView
                    android:id="@+id/txtRecipeName3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ensalada César"
                    android:textColor="#707070"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txtRecipeLength3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/schedule_icon"
                    android:text=" 25 min"
                    android:textColor="#707070"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/txtRecipeCalories3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/calorias_icon"
                    android:text=" 650 calorías"
                    android:textColor="#707070"
                    android:textSize="10sp" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fbtnCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="25dp"
        android:clickable="true"
        android:focusable="true"
        app:backgroundTint="#2BE232"
        app:srcCompat="@drawable/camera_icon" />

